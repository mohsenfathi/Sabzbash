
@{
    ViewBag.Title = "تغیر رمز عبور ٬ شماره تلفن";
    Layout = "~/Areas/User/Views/Shared/Layout/_master.cshtml";
}
<a href="@Url.Action("LoginPage", "Login")">
    <img src="~/Areas/User/Images/BackButton.png" width="50" class="BackButton" />
</a>
<img class="HeaderLogo" width="100" src="~/Areas/User/Images/PasswordIcon.png" />
<span class="RegularText" style="font-size:30px;margin-top:20px;">مدیریت رمز عبور</span>
<span class="RegularText" style="color:#777;margin-top:10px;">تغیر رمزعبور ۶ رقمی</span>
<span class="RegularText" style="margin-top:10px;">شماره همراه خود را وارد کنید</span>
<br />
<input id="txtMobileNumber" type="text" class="TextInput" placeholder="شماره تلفن همراه" />
<br />
<input type="button" onclick="SendVerificationCode();" class="btn btnGreen" style="padding-top:0;width:150px;height:45px;font-size:25px;" value="تایید" />

<script>
    function SendVerificationCode() {
        var param = {
            PhoneNumber: $("#txtMobileNumber").val()
        };
        CallMethod("/User/Login/ResetPasswordSendVerificationCode", JSON.stringify(param), function (response) {
            window.location = '/User/Login/Sms?FromAddress=ChangePassword&Id=' + response;
        });
    }
</script>