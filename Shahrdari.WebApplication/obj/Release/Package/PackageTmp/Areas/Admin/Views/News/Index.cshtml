@model List<Shahrdari.Models.M_News>
@{
    ViewBag.Title = "لیست اخبار";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_master.cshtml";
}

<div class="ContentSection" mf-slice='1' id="divAddRole">
    <div class="ContentSectionHeader">
        اخبار<span> اخبار ثبت شده در سیستم</span>
    </div>
    <input type="button" value="افزودن خبر جدید" class="btnSection btnFormBlue" onclick="window.location = '@Url.Action("Modify", "News", new { Id = 0 })'" />
    <table class="tbList">
        <tr class="tbListHeader">
            <td>شناسه</td>
            <td>عنوان</td>
            <td>توضیح کوتاه</td>
            <td>عملیات</td>
        </tr>
        <tbody>
            @foreach (var li in Model)
            {
                <tr>
                    <td>@li.Id</td>
                    <td>@li.Title</td>
                    <td>@li.Summery</td>
                    <td><img class="tbListModifyIcon" src="~/Areas/Admin/Images/editIcon.png" onclick="window.location = '@Url.Action("Modify", "News", new { Id = li.Id })';" /></td>
                </tr>
            }
        </tbody>
    </table>
</div>