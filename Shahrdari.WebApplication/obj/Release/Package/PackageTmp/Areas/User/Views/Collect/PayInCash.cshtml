
@{
    ViewBag.Title = "پرداخت نقد";
    Layout = "~/Areas/User/Views/Shared/Layout/_master.cshtml";
}

<div class="AllCollectMain">
    <div id="PayInCashTop">
        <img src="~/Areas/User/Images/CashIcon.png" />
        <span class="RegularText">برداشت نقدی</span>
    </div>

    <div id="PayInCashPointCount">
        <h1>امتیاز شما ۸۵۹۴۷</h1>
        <h1>معادل ۲۰۰۰۰۰۰ ریال</h1>
    </div>

    <div style="width:310px;">
        <span style="color:#000;font-size:20px;">با وارد کردن حساب بانکی عضو سیستم شتاب نسبت به برداشت اقدام کنید واریز طی ۴۸ ساعت به حساب شما واریز خواهد شد</span>
    </div>
    
    <div id="PayInCashForm">
        <input type="text" class="TextInput" placeholder="نام بانک" />
        <input type="text" class="TextInput" placeholder="شماره شبا" />
        <input type="button" class="btn btnGreen" value="ذخیره" />
    </div>
    <img src="~/Areas/User/Images/BackButton.png" onclick="window.location='@Url.Action("index","Collect")'" class="BackButton"/>
</div>

<style>
    .AllCollectMain{
        justify-content:space-around;
    }
</style>